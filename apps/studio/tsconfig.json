{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    // "declaration": true,
    "declarationMap": true,
    // "jsx": "react-jsx",
    "outDir": "./dist",
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "baseUrl": "./",
    "paths": {
      "studio/*": ["./*"]
    }
  },
  "references": [{
    "path": "../../packages/types",
  }],
  "extends": "../../tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "../../packages/types/src/**/*.ts",
    "../../packages/types/src/**/*.tsx"
    // "../../sanity-types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
